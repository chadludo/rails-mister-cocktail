<div class="container">
<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.present? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% else %>
  <%= image_tag("missingimage.png") %>
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
  <li><%= dose.description %> -- <%= dose.ingredient.name %> [x] <%= link_to 'Delete', dose_path(dose), method: :delete %></li>
  <% end %>
</ul>

<%= link_to "Back", root_path, class: "btn btn-flat" %>
<%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-flat" %>
</div>
